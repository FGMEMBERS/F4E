<?xml version="1.0"?>
<PropertyList>

 <path>attitude.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <object-name>rollarrows</object-name>
  <property>/orientation/roll-deg</property>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
  <animation> 
   <object-name>ball</object-name>
   <type>material</type>
    <emission> 
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
        <red>0.45</red>
        <green>0.34</green>
        <blue>0.18</blue>
      </emission>
  </animation>

 <animation>
  <type>rotate</type>
  <object-name>steerbar-vert</object-name>
  <property>controls/flight/rudder</property>
  <factor>30</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>steerbar-hor</object-name>
  <property>controls/flight/elevator</property>
  <factor>30</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>/orientation/pitch-deg</property>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>/orientation/heading-magnetic-deg[0]</property>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>-1</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>turnrate</object-name>
  <property>/instrumentation/turn-indicator/indicated-turn-rate</property>
  <factor>0.005</factor>
  <min-m>-0.01</min-m>
  <max-m>0.01</max-m>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>gsarrow</object-name>
  <property>/instrumentation/nav/gs-needle-deflection[0]</property>
  <factor>0.005</factor>
  <min-m>-0.025</min-m>
  <max-m>0.025</max-m>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
  <animation> 
   <object-name>gsarrow</object-name>
   <type>material</type>
    <emission> 
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
        <red>0.45</red>
        <green>0.34</green>
        <blue>0.18</blue>
      </emission>
  </animation>
  <animation> 
   <object-name>InnerBezel</object-name>
   <object-name>MiddleBezel</object-name>
   <object-name>OuterBezel</object-name>
   <object-name>steerbar-hor</object-name>
   <object-name>steerbar-vert</object-name> 
   <object-name>rollarrows</object-name>
   <object-name>turnrate</object-name>
   <object-name>sillouette</object-name>

   
   <type>material</type>
    <emission> 
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
        <red>0.45</red>
        <green>0.34</green>
        <blue>0.18</blue>
      </emission>
  </animation>



</PropertyList>


