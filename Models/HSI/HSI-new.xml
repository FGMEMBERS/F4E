<animation>
  <type>rotate</type>
  <object-name>course-knob</object-name>
  <property>instrumentation/nav/radials/selected-deg</property>
  <center>
    <x-m>0.00894322</x-m>
    <y-m>0.0523598</y-m>
    <z-m>-0.0610439</z-m>
  </center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
  <animation>
    <type>pick</type>
    <object-name>course-knob</object-name>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
       <command>property-adjust</command>
       <property>instrumentation/nav/radials/selected-deg</property>
       <step>-1</step>
       <min>0</min>
       <max>359</max>
       <wrap>true</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
       <command>property-adjust</command>
       <property>instrumentation/nav/radials/selected-deg</property>
       <step>1</step>
       <min>0</min>
       <max>359</max>
       <wrap>true</wrap>
      </binding>
    </action>
  </animation>

