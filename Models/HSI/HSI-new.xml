<!-- annunciators -->
  <animation>
    <type>select</type>
<object-name>man-an</object-name>
<object-name>dl-an</object-name>
<object-name>tgt-an</object-name>
    <condition>
      <equals>
      <value>1</value>
      <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>nav1-an</object-name>
    <condition>
      <property>instrumentation/nav/in-range</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ils-an</object-name>
    <condition>
      <and>
        <property>instrumentation/nav/in-range</property>
        <property>instrumentation/nav/has-gs</property>
      </and>
    </condition>
  </animation>


  <animation>
    <type>select</type>
    <object-name>nav2-an</object-name>
    <condition>
      <and>
        <property>instrumentation/nav/in-range</property>
        <equals>
          <property>instrumentation/navcomputer/brg-switch-position</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>tac-an</object-name>
    <condition>
      <and>
        <property>instrumentation/navcomputer/in-range</property>
        <equals>
          <property>instrumentation/navcomputer/brg-switch-position</property>
          <value>2</value>
        </equals>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>uhf-an</object-name>
    <condition>
      <and>
        <property>instrumentation/adf/in-range</property>
        <equals>
