<?xml version="1.0"?>

<PropertyList>
  <!-- horizontal situation indicator -->
  <name>HSI</name>
  <path>HSI-new.ac</path>

  <animation>
    <type>rotate</type>
    <object-name>HSI-compass-card</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>orientation/heading-magnetic-deg[0]</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>bearing-needle-1</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>orientation/heading-magnetic-deg[0]</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bearing-needle-1</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>instrumentation/navcomputer/indicated-bearing</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>miles-flag</object-name>
    <condition>
      <equals>
        <property>instrumentation/navcomputer/in-range</property>
        <value>false</value>
      </equals>
    </condition>
  </animation>
<!-- tacan distance digital display -->
  <animation>
    <type>textranslate</type>
    <object-name>miles-drum-0</object-name>
    <property>instrumentation/navcomputer/indicated-distance-nm</property>
