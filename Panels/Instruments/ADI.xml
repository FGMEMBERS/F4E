   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-53</offset>
    </transformation>
   </transformations>
  </layer>
<layer>
   <name>tube-back</name>
   <texture>
    <path>Aircraft/Instruments/Textures/maintc.rgb</path>
    <x1>0.01171875</x1>
    <x2>0.9921875</x2>
    <y1>0.7421875</y1>
