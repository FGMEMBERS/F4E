     <type>rotation</type>
     <property>/orientation/roll-deg</property>
     <min>-360.0</min>
     <max>360.0</max>
     <scale>-1</scale>
    </transformation>
   </transformations>
  </layer>
 
  <layer>
   <name>Glideslope Needle</name>
   <condition>
    <equals>
      <property>/instrumentation/nav/in-range</property>
      <value>true</value>
    </equals>
   </condition>
   <texture>
    <path>Aircraft/F4E/Panels/Instruments/Textures/ADI.rgb</path>
    <x1>0.0</x1>
    <y1>0.98047</y1>
    <x2>0.0157</x2>
    <y2>1.0</y2>
   </texture>
   <h>5</h>
   <w>10</w>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-52</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <property>/instrumentation/nav/gs-needle-deflection[0]</property>
     <min>-5</min>
     <max>5</max>
     <scale>4.0</scale>
     </transformation>
