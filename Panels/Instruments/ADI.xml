    <x1>0.01171875</x1>
    <x2>0.9921875</x2>
    <y1>0.015625</y1>
    <y2>0.2890625</y2>
   </texture>
   <w>60</w>
   <h>20</h>
  <transformations>
  <transformation> 
    <type>y-shift</type>
	<offset>-55</offset>
